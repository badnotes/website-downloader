---
import ThemeIcon from './Theme.astro';
---

<nav class="bg-white shadow-md dark:bg-gray-700 dark:shadow-gray-600">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-xl font-bold text-gray-800 dark:text-gray-200">
            <div class="flex"><img src="/logo.svg" alt="Logo" class="h-8 w-8 mr-2" />
            SiteDowner
            </div>
          </a>
        </div>
      </div>
      <div class="flex items-center">
        <a 
          href="/" 
          class="mx-1 px-2 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-100 dark:hover:bg-gray-700"
          class:list={{
            'text-blue-600 bg-gray-100 dark:bg-gray-800': Astro.url.pathname === '/' 
          }}
        >
          Home
        </a>
        <a 
          href="/downloader" 
          class="mx-1 px-2 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-100 dark:hover:bg-gray-700"
          class:list={{
            'text-blue-600 bg-gray-100 dark:bg-gray-800': Astro.url.pathname === '/download' 
          }}
        >
          Downloader
        </a>
        <ThemeIcon />
      </div>
    </div>
  </div>
</nav>
