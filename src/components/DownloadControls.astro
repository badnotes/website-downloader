---
interface Props {
  // 可以添加props如果需要
}

const {} = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 pb-20">
  <h2 class="text-xl font-semibold mb-4">Website Download</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <h3 class="font-medium mb-2">Download Options</h3>
      <div class="border border-gray-300 rounded-lg p-2">
        <div class="flex items-center gap-4">
          <div class="flex items-center">
            <input type="radio" id="currentPage" name="downloadType" value="current" class="mr-2" checked>
            <label for="currentPage">Single Page</label>
          </div>
          <div class="flex items-center">
            <input type="radio" id="fullSite" name="downloadType" value="full" class="mr-2">
            <label for="fullSite">Full Website</label>
          </div>
        </div>

      </div>
    </div>
    
    <div>
      <h3 class="font-medium mb-2">Enter Website URL</h3>
      <div class="flex gap-2">
        <input 
          type="text" 
          placeholder="https://example.com" 
          class="flex-1 border border-gray-300 rounded px-3 py-2"
        />
        <button 
          class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded"
          id="downloadBtn"
        >
        Start Download
        </button>

      </div>
    </div>
  </div>
</div>